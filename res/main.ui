<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <object id="main_window" class="GtkWindow">
        <property name="title">NManager</property>
        <property name="default-width">640</property>
        <property name="default-height">480</property>

        <child>
            <object id="main_box" class="GtkBox">
                <property name="orientation">GTK_ORIENTATION_VERTICAL</property>

                <child>
                    <object id="button_box" class="GtkBox">
                        <child>
                            <object id="up_button" class="GtkButton">
                                <child>
                                    <object id="up_button_label" class="GtkLabel">
                                        <property name="label">Up</property>
                                    </object>
                                </child>
                            </object>
                        </child>

                        <child>
                            <object id="home_button" class="GtkButton">
                                <child>
                                    <object id="home_button_label" class="GtkLabel">
                                        <property name="label">Home</property>
                                    </object>
                                </child>
                            </object>
                        </child>

                        <child>
                            <object id="path_entry" class="GtkEntry">
                                <property name="hexpand">TRUE</property>
                                <property name="max-length">1024</property>
                                <property name="placeholder-text">Enter absolute path here</property>
                            </object>
                        </child>
                    </object>
                </child>

                <child>
                    <object id="scrolled_window" class="GtkScrolledWindow">
                        <property name="vexpand">TRUE</property>

                        <child>
                            <object id="entry_list" class="GtkListBox">
                                <property name="name">entry_list</property>
                                <property name="selection-mode">GTK_SELECTION_SINGLE</property>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
    </object>
</interface>