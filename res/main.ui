<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <object id="main_window" class="GtkWindow">
        <property name="title">NManager</property>
        <property name="default-width">640</property>
        <property name="default-height">480</property>

        <child>
            <object id="main_box" class="GtkBox">
                <property name="orientation">GTK_ORIENTATION_VERTICAL</property>

                <child>
                    <object id="button_box" class="GtkBox">
                        <child>
                            <object id="up_button" class="GtkButton">
                                <child>
                                    <object id="up_button_label" class="GtkLabel">
                                        <property name="label">Up</property>
                                    </object>
                                </child>
                            </object>
                        </child>

                        <child>
                            <object id="home_button" class="GtkButton">
                                <child>
                                    <object id="home_button_label" class="GtkLabel">
                                        <property name="label">Home</property>
                                    </object>
                                </child>
                            </object>
                        </child>

                        <child>
                            <object id="refresh_button" class="GtkButton">
                                <child>
                                    <object id="refresh_button_label" class="GtkLabel">
                                        <property name="label">Refresh</property>
                                    </object>
                                </child>
                            </object>
                        </child>

                        <child>
                            <object id="path_entry" class="GtkEntry">
                                <property name="hexpand">TRUE</property>
                                <property name="max-length">1024</property>
                                <property name="placeholder-text">Enter absolute path here</property>
                            </object>
                        </child>

                        <child>
                            <object class="GtkMenuButton">
                                <property name="direction">GTK_ARROW_RIGHT</property>
                                <property name="popover">
                                    <object class="GtkPopoverMenu">
                                        <property name="menu-model">
                                            <menu>
                                                <section>
                                                    <item>
                                                        <attribute name='label' translatable='yes'>Add File</attribute>
                                                        <attribute name='action'>app.add-file</attribute>
                                                    </item>
                                                    <item>
                                                        <attribute name='label' translatable='yes'>Add Folder</attribute>
                                                        <attribute name='action'>app.add-folder</attribute>
                                                    </item>
                                                    <item>
                                                        <attribute name='label' translatable='yes'>Move to Trash</attribute>
                                                        <attribute name='action'>app.move-to-trash</attribute>
                                                    </item>
                                                    <item>
                                                        <attribute name='label' translatable='yes'>Permanently Delete</attribute>
                                                        <attribute name='action'>app.permanently-delete</attribute>
                                                    </item>
                                                    <item>
                                                        <attribute name='label' translatable='yes'>Show Hidden</attribute>
                                                        <attribute name='action'>app.show-hidden</attribute>
                                                    </item>
                                                </section>
                                            </menu>
                                        </property>
                                    </object>
                                </property>
                            </object>
                        </child>
                    </object>
                </child>

                <child>
                    <object class="GtkScrolledWindow">
                        <property name="vexpand">TRUE</property>

                        <child>
                            <object id="entry_list" class="GtkListBox">
                                <property name="name">entry_list</property>
                                <property name="selection-mode">GTK_SELECTION_SINGLE</property>
                                <property name="activate-on-single-click">FALSE</property>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
    </object>
</interface>